<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="@string/fragment3_title"
        android:textColor="?attr/colorOnBackground"
        android:textSize="30sp"
        android:textStyle="bold">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/sealInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_info_details">
        </ImageView>
        <Button
            android:id="@+id/sealUpdateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateBtn">
        </Button>
        <ProgressBar
            android:id="@+id/sealUpdateProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible">
        </ProgressBar>
    </LinearLayout>
    <com.japsu.vaasaweather.CustomScrollView
        android:id="@+id/seaScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/linear_custom_border">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/linear_custom_border_thin"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/fragment3_sealevel_title"
                            android:textSize="25sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="center"
                            android:paddingRight="20dp"
                            android:paddingEnd="20dp"
                            tools:ignore="RtlSymmetry">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/curSealevel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tämänhetkinen:"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="left"
                            tools:ignore="RtlHardcoded">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="start"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/maxSealevel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Viiden päivän korkein:"
                            android:textSize="17sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="left"
                            tools:ignore="RtlHardcoded">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="start"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/minSealevel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Viiden päivän matalin:"
                            android:textSize="17sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="left"
                            tools:ignore="RtlHardcoded">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/linear_custom_border_thin"
                    android:padding="10dp">
                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/sealGraph"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">
                    </com.jjoe64.graphview.GraphView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/linear_custom_border">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/linear_custom_border_thin"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/fragment3_seatemp_title"
                            android:textSize="25sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="center"
                            android:paddingRight="20dp"
                            android:paddingEnd="20dp"
                            tools:ignore="RtlSymmetry">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/curSeatemp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tämänhetkinen:"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="left">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="start"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/maxSeatemp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Viiden päivän korkein:"
                            android:textSize="17sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="left"
                            tools:ignore="RtlHardcoded">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="start"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/minSeatemp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Viiden päivän matalin:"
                            android:textSize="17sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="left"
                            tools:ignore="RtlHardcoded">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/linear_custom_border_thin"
                    android:padding="10dp">
                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/seatGraph"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">
                    </com.jjoe64.graphview.GraphView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/linear_custom_border" tools:visibility="gone">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/linear_custom_border_thin"
                        android:padding="10dp">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Uusin merisää"
                            android:textSize="25sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="center"
                            android:paddingRight="20dp"
                            android:paddingEnd="20dp"
                            tools:ignore="RtlSymmetry">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/linear_custom_border_thin"
                        android:padding="10dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_media_play">
                    </ImageView>
                    <SeekBar
                            android:layout_width="300dp"
                            android:layout_height="wrap_content">
                    </SeekBar>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.japsu.vaasaweather.CustomScrollView>
</LinearLayout>