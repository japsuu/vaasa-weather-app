<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VaasaWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/midnight_blue</item>
        <item name="colorPrimaryVariant">@color/wet_asphalt</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/asbestos</item>
        <item name="colorSecondaryVariant">@color/concrete</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/backgroundElevationLight</item>
        <item name="colorOnSurface">@color/backgroundElevationLighter</item>
    </style>

    <style name="Theme.VaasaWeather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VaasaWeather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VaasaWeather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ThemeOverlay.VaasaWeather.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/backgroundElevationLighter</item>
        <item name="appWidgetTextColor">@color/black</item>
    </style>
</resources>

    <!-- Find info about the colors https://material.io/develop/android/theming/color and design rules https://material.io/design/color/applying-color-to-ui.html#top-and-bottom-app-bars-->